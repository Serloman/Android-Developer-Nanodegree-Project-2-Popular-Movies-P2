<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/cast_profile_pic"
            android:layout_height="@dimen/cast_profile_pic"
            android:id="@+id/castProfile"
            android:layout_marginTop="@dimen/card_margin"
            android:layout_marginLeft="@dimen/single_item_margin"
            android:layout_marginRight="@dimen/single_item_margin"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:text="Name"
            android:id="@+id/castName"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</FrameLayout>